generator client {
    provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
    id Int @id @default(autoincrement())
    username String @unique
    password String
    isAdmin Boolean
    foods Food[]
    clothing Clothing[]
}

model Trip {
    id Int @id @default(autoincrement())
    startDate DateTime
    endDate DateTime
    campground Campgrounds @relation(fields: [campgroundId], references: [id], onUpdate: Cascade)
    campgroundId Int
    current Boolean
    gasTotal Int
    gasSingle Int
    fireNight Int
    parking Int
    budgets Budget[]
    meals Meals[]
    activities Activities[]
}

model Budget {
    id Int @id @default(autoincrement())
    name String
    trip Trip @relation(fields: [tripId], references: [id], onDelete: Cascade)
    tripId Int
    total Int
    individual Float
}

model Meals {
    id Int @id @default(autoincrement())
    day Int
    course String
    name String
    foods Food[]
    trips Trip[]
}

model Food {
    id Int @id @default(autoincrement())
    name String
    purchased Boolean
    cooler Boolean
    meals Meals[]
    user User @relation(fields: [userId], references: [id], onUpdate: Cascade)
    userId Int
}

model Clothing {
    id Int @id @default(autoincrement())
    name String
    packed Boolean
    users User[]
}

model Campgrounds {
    id Int @id @default(autoincrement())
    park String @unique
    price Int
    firewood Int
    distance Float
    curvy String
    reserveFrame Int
    website String
    generalArea String
    trips Trip[]
}

model Activities {
    id Int @id @default(autoincrement())
    name String @unique
    trips Trip[]
}

model Equipment {
    id Int @id @default(autoincrement())
    name String
    packed Boolean
    needed Boolean
}