generator client {
    provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
    id Int @id @default(autoincrement())
    username String @unique
    password String
    isAdmin Boolean
}

model Trip {
    id Int @id @default(autoincrement())
    startDate DateTime
    endDate DateTime
    campground Campgrounds @relation(fields: [campgroundId], references: [id], onUpdate: Cascade)
    campgroundId Int //campgrounds
    current Boolean
    gasTotal Int
    gasSingle Int
    fireNight Int
    parking Int
}

model Budget {
    id Int @id @default(autoincrement())
    trip String //trip
    name String
    total Int
    individual Float
}

model Equipment {
    id Int @id @default(autoincrement())
    name String
    packed Boolean
}

model Meals {
    id Int @id @default(autoincrement())
    day Int
    course String
    name String
    ingredients String //food
}

model Food {
    id Int @id @default(autoincrement())
    name String
    purchased Boolean
    cooler Boolean
    meal String //meals
    assignee String //user
}

model Clothing {
    id Int @id @default(autoincrement())
    name String
    packed Boolean
    user String //user
}

model Campgrounds {
    id Int @id @default(autoincrement())
    park String @unique
    price Int
    firewood Int
    distance Float
    curvy String
    reserveFrame Int
    website String
    generalArea String
    trips Trip[]
}

model Activities {
    id Int @id @default(autoincrement())
    name String @unique
}